" Syntax Highlighting
if has("syntax")
    syntax on
endif

" Auto indent
set autoindent
set cindent

" show line numbers
set number

" Color scheme
colorscheme jellybeans

" Tab width / space
set expandtab
set tabstop=4
set shiftwidth=4

" distinguish lower or upper case when search
set ignorecase
set smartcase

" highlight the searched word
set hlsearch
set incsearch

" highlight the cursor line / column
set cursorline
set cursorcolumn

" work well backspace
set backspace=2


